<p id="notice"><%= notice %></p>

<section class="section">
  <div class="container">
    <h1 class="title">Acme Cult Hero Supplies</h1>

    <h2>Total Sales Revenue:</h2>
    <div>
      <td> <%= @total_sales_revenue %></td>
    <div>
    <br>
    <table class="table is-striped is-narrow is-hoverable">
      <thead>
        <tr>
          <th colspan="3"></th>
        </tr>
      </thead>

      <h2>Upload a new Acme Sales Report:</h2>
        <%= csrf_meta_tags %>
        <%= csp_meta_tag %>
      <%= form_tag 'acme/sales_report', method: :post, multipart: true do %>
        <%= file_field_tag 'data_file' %>
        <%= submit_tag 'Import' %>
      <% end %>

      <br><br>
      <h2>Previous Sales Report Files</h2>
      <tbody>
        <% @reports.each do |report| %>
          <tr>
            <td> <strong>Report File Name:</strong>  <%= report.file_name %> <strong>Successful:</strong> <%= report.success? %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section

